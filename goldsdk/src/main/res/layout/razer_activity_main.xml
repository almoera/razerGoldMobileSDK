<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.razer.goldsdk.view.main.RazerMainViewModel" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/buttom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/color_buttom_nav"
            app:itemTextColor="#000"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/razer_menu_buttom_nav"></com.google.android.material.bottomnavigation.BottomNavigationView>


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:padding="30dp"
            android:text="点击"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="#fff"
            app:backgroundTintMode="src_over"
            app:cornerRadius="20dp"
            app:rippleColor="@color/design_default_color_primary" />

    </RelativeLayout>
</layout>

